{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "standard",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "semi": ["error", "always"],
        "function-call-argument-newline": ["error", "always"],
        "sort-imports": ["error", {
            "ignoreCase": false,
            "ignoreDeclarationSort": false,
            "ignoreMemberSort": false,
            "memberSyntaxSortOrder": ["none", "all", "multiple", "single"]
        }]/*,
        "max-len": ["error", {
            "code": 80,
            "ignoreUrls": true,
            "ignoreStrings": true,
            "ignoreTemplateLiterals": false,
            "ignoreRegExpLiterals": true
        }]
        */
    }
}
